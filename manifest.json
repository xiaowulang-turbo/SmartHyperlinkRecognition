{
	"manifest_version": 3,
	"name": "智能超链接识别",
	"name_en": "Smart Text-to-Link Converter",
	"version": "1.0.0",
	"description": "自动将网页中的纯文本 URL 转换为可点击的超链接",
	"description_en": "Automatically converts plain text URLs in web pages into clickable hyperlinks",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": ["storage", "activeTab"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "智能超链接识别"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_idle",
			"all_frames": false
		}
	],
	"options_page": "options.html",
	"background": {
		"service_worker": "background.js"
	}
}
